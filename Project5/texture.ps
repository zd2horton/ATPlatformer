//Texture2D shader_texture: texture resource for rendering
//SamplerState sample_type allows modification of how many pixels written to polygon face

Texture2D shader_texture;
SamplerState sample_type;

struct PixelInputType
{
    float4 position : SV_POSITION;
    float2 tex : TEXCOORD0;
};

//uses sampler state and texcoords to return pixel value for UV location on polygon face
float4 TexturePixelShader(PixelInputType input_vertex) : SV_TARGET
{
	float4 texture_colour;
    texture_colour = shader_texture.Sample(sample_type, input_vertex.tex);
    return texture_colour;
}
